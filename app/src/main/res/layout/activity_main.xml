<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".View.Login">

    <Button
        android:id="@+id/main_btn_sairdoapp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorAccentDark"
        android:fontFamily="@font/robotomedium"
        android:gravity="center|end"
        android:paddingStart="60dp"
        android:paddingLeft="60dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:text="@string/atv_main_sairdoapp"
        android:textAppearance="@style/customfontstyleroboto"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_button" />

    <view
        android:id="@+id/v_titleBar"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#144A7B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_img_logo"
        android:layout_width="91dp"
        android:layout_height="71dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/v_titleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_titleBar"
        app:layout_constraintVertical_bias="0.551"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/main_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacificoregular"
        android:text="@string/app_name"
        android:textColor="@color/colorBackground"
        android:textIsSelectable="false"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="@+id/v_titleBar"
        app:layout_constraintEnd_toEndOf="@+id/v_titleBar"
        app:layout_constraintStart_toEndOf="@+id/main_img_logo"
        app:layout_constraintTop_toTopOf="@+id/v_titleBar" />

    <TextView
        android:id="@+id/main_tv_aguaegas"
        android:layout_width="198dp"
        android:layout_height="53dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/robotobold"
        android:text="@string/atv_main_aguaegas"
        android:textAppearance="@style/customfontstyleroboto"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_titleBar" />

    <TextView
        android:id="@+id/main_tv_simpleserapido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/robotobold"
        android:text="@string/atv_main_simpleserapido"
        android:textAppearance="@style/customfontstyleroboto"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_tv_aguaegas" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_tv_simpleserapido" >

    </com.google.android.gms.common.SignInButton>

    <ImageView
        android:id="@+id/main_img_sair"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/atv_main_sairdoapp"
        android:elevation="@android:dimen/app_icon_size"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/main_btn_sairdoapp"
        app:layout_constraintStart_toStartOf="@+id/main_btn_sairdoapp"
        app:layout_constraintTop_toTopOf="@+id/main_btn_sairdoapp"
        app:srcCompat="@drawable/logout" />

</androidx.constraintlayout.widget.ConstraintLayout>